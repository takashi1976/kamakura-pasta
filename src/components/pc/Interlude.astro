---
import { Image } from "astro:assets";
import SectionLayout from "@components/common/SectionLayout2.astro";
import Carbonara from "../../img/carbonara/carbonara.png";
import Wa from "../../img/intro/wa.png";
import Reservation from "../../img/intro/reservation.png";
---

<SectionLayout
  id="tabehoudai"
  addClass="!bg-amber-100 pb-16"
  pattern=""
  visibleButton="false"
>
  <div
    class="relative w-full h-full flex justify-center items-center md:max-w-screen-lg md:mx-auto md:px-4"
  >
    <div class="relative h-full w-full _">
      <div class="absolute grid grid-cols-1 z-20 h-full w-full">
        <div class="flex items-center justify-start _">
          <p
            x-bind:class={`visible ? '!opacity-100 !-translate-x-4' : ''`}
            class="transiton opacity-0 duration-1000 delay-500 -translate-x-8 font-hina bg-lime-900/70 text-white p-4 md:p-6 text-2xl md:text-5xl rounded-lg md:rounded-xl px-9 -md:translate-x-1/2 shadow-xl"
          >
            生パスタと
          </p>
        </div><div></div><div class="flex items-center justify-end">
          <p
            x-bind:class={`visible ? '!opacity-100 !translate-x-4 ' : ''`}
            class="transiton opacity-0 duration-1000 delay-1500 translate-x-8 font-hina bg-lime-900/70 text-white md:p-6 p-4 text-xl md:text-4xl rounded-lg md:rounded-xl px-6 md:px-12 shadow-xl"
          >
            焼きたてパン‌ 食べ放題！‌
          </p>
        </div>
      </div>
      <video
        class="h-full relative object-fit w-full"
        src="/img/movie/movie.mp4"
        autoplay
        loop
        muted
        playsinline
      >
      </video>
    </div>
  </div>
</SectionLayout>
