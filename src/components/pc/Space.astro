---
import { Image } from "astro:assets";
import SectionLayout from "@components/common/SectionLayout2.astro";
import Space1 from "../../img/space/space1.png";
import Space2 from "../../img/space/space2.png";
const animation = "transiton opacity-0 duration-1000 translate-y-6";
---

<SectionLayout
  id="yuttari"
  addClass="bg-gradient-to-br from-amber-100 to-white"
  visibleButton="false"
>
  <div class="relative h-full w-full bg-_ flex items-center justify-center">
    <div class="relative flex items-center md:justify-center w-full md:w-auto">
      <p
        x-bind:class={`visible ? '!opacity-100 !translate-x-0' : ''`}
        class={`transiton opacity-0 duration-1000 -translate-x-6 rotate-2 delay-1000 md:-rotate-0 -bottom-4 md:bottom-12 -left-4 md:-left-4 font-hina absolute bg-white text-yellow-800 z-40 text-2xl noto inline-block bg-mpink1 w-auto p-4 md:p-6 px-6 md:px-12 shadow-md md:mt-4 lg:mt-5 md:text-xl lg:text-5xl`}
      >
        ゆったり空間を
      </p>

      <p
        x-bind:class={`visible ? '!opacity-100 !translate-x-0' : ''`}
        class={`transiton opacity-0 duration-1000 translate-x-6 delay-2000  -rotate-2 md:rotate-0 -bottom-20 md:-bottom-10 ml-0 left-0 md:left-64 md:-mt-4 font-hina absolute bg-amber-800 text-white z-30 text-2xl noto inline-block bg-mpink1 w-auto p-4 md:p-6 px-8 md:px-12 shadow-md  lg:mt-5 md:text-xl lg:text-5xl`}
      >
        ご提供
      </p>

      <div
        x-bind:class={`visible ? '!opacity-100 !translate-y-0' : ''`}
        class={`${animation} scale-120 md:scale-100 -mt-64 md:-mt-20 aspect-[1466/1394] w-full relative max-w-[560px] rounded-xs md:rounded-sm overflow-hidden -rotate-4 border-4 md:border-8 border-white shadow-lg`}
      >
        <Image
          src={Space1}
          alt="ga"
          class="object-cover w-full filter saturate-150"
        />
      </div>

      <div
        x-bind:class={`visible ? '!opacity-100 !translate-y-0' : ''`}
        class={`${animation} scale-120 md:scale-100 delay-200 relative aspect-[1466/1394] w-full max-w-[560px] md:rounded-sm  rounded-xs overflow-hidden -ml-12 md:-ml-24 -mb-32 md:-mb-24 rotate-4 border-4 md:border-8 border-white shadow-lg`}
      >
        <Image
          src={Space2}
          alt="ga"
          class="object-cover w-full filter saturate-150"
        />
      </div>
    </div>
  </div>
</SectionLayout>
